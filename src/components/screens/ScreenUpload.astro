---
/**
 * ScreenUpload.astro
 * Formulario de subida de propiedad con stepper de 3 pasos
 * Basado en nueva_propiedad.png del diseño
 */
import { Icon } from 'astro-icon/components';
---

<div class="screen-container bg-slate-50 text-neutral-text">
  
  <!-- App Header -->
  <div class="screen-header flex items-center gap-3">
    <button class="text-neutral-muted">
      <Icon name="heroicons:arrow-left" class="w-6 h-6" />
    </button>
    <h1 class="text-lg font-bold text-neutral-text flex-1">Nueva Propiedad</h1>
    <div class="text-brand-primary font-bold text-sm">Paso 1/3</div>
  </div>

  <!-- Stepper -->
  <div class="px-5 py-3 bg-white border-b border-neutral-border">
    <div class="flex items-center gap-2">
      <div class="flex-1 h-1.5 rounded-full bg-brand-primary"></div>
      <div class="flex-1 h-1.5 rounded-full bg-neutral-border"></div>
      <div class="flex-1 h-1.5 rounded-full bg-neutral-border"></div>
    </div>
    <div class="flex justify-between mt-2 text-[10px] font-medium text-neutral-muted">
      <span class="text-brand-primary font-bold">Datos</span>
      <span>Ubicación</span>
      <span>Fotos</span>
    </div>
  </div>

  <!-- Content -->
  <div class="screen-content space-y-5">
    
    <!-- Image Upload Area -->
    <div class="space-y-2">
      <label class="text-xs font-bold text-neutral-muted uppercase tracking-wide">Fotografía Principal</label>
      <div 
        class="aspect-video rounded-2xl border-2 border-dashed border-brand-primary/30 bg-brand-primary-soft/20 flex flex-col items-center justify-center relative overflow-hidden group transition-all duration-500"
        id="upload-area"
      >
        <!-- State 1: Placeholder -->
        <div class="absolute inset-0 flex flex-col items-center justify-center transition-opacity duration-300" id="upload-placeholder">
          <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mb-2 shadow-sm text-brand-primary">
            <Icon name="heroicons:camera" class="w-6 h-6" />
          </div>
          <span class="text-sm text-brand-primary font-medium">Toca para subir foto</span>
        </div>

        <!-- State 2: Image Preview (Initially Hidden) -->
        <div 
          class="absolute inset-0 bg-cover bg-center opacity-0 scale-105 transition-all duration-700"
          id="upload-preview"
          style="background-image: url('https://images.unsplash.com/photo-1600596542815-2a4d04792a95?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80');"
        >
          <div class="absolute inset-0 bg-black/10"></div>
          <div class="absolute bottom-3 right-3 bg-white/90 backdrop-blur px-2 py-1 rounded-lg text-xs font-bold shadow-sm">
            Editar
          </div>
        </div>
      </div>
    </div>

    <!-- Form Fields -->
    <div class="space-y-4">
      <!-- Title Input -->
      <div class="space-y-1.5">
        <label class="text-xs font-bold text-neutral-muted uppercase tracking-wide">Título del anuncio</label>
        <div class="relative">
          <input 
            type="text" 
            id="input-title"
            class="w-full bg-white border border-neutral-border rounded-xl px-4 py-3 text-neutral-text text-sm focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all"
            placeholder="Ej: Ático con Terraza..."
            readonly
          />
        </div>
      </div>

      <!-- Franchise Dropdown -->
      <div class="space-y-1.5">
        <label class="text-xs font-bold text-neutral-muted uppercase tracking-wide">Franquicia asignada</label>
        <div class="relative">
          <Icon name="heroicons:building-storefront" class="w-4 h-4 text-neutral-muted absolute left-3 top-1/2 -translate-y-1/2" />
          <div class="w-full bg-white border border-neutral-border rounded-xl pl-9 pr-4 py-3 text-sm text-neutral-text flex justify-between items-center">
            <span>Seleccionar franquicia</span>
            <Icon name="heroicons:chevron-down" class="w-4 h-4 text-neutral-muted" />
          </div>
        </div>
      </div>

      <!-- Price Input -->
      <div class="space-y-1.5">
        <label class="text-xs font-bold text-neutral-muted uppercase tracking-wide">Precio (€)</label>
        <div class="relative">
          <input 
            type="text" 
            id="input-price"
            class="w-full bg-white border border-neutral-border rounded-xl px-4 py-3 text-neutral-text text-sm font-semibold focus:border-brand-primary outline-none"
            placeholder="0.00"
            readonly
          />
          <div class="absolute right-4 top-1/2 -translate-y-1/2 text-neutral-muted">
            <Icon name="heroicons:currency-euro" class="w-4 h-4" />
          </div>
        </div>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-2 gap-3">
        <div class="bg-white p-3 rounded-xl border border-neutral-border flex items-center justify-between">
          <span class="text-sm text-neutral-muted">Habitaciones</span>
          <div class="flex items-center gap-2">
            <button class="w-6 h-6 rounded-full bg-neutral-border/50 text-neutral-muted flex items-center justify-center text-xs hover:bg-brand-primary-soft hover:text-brand-primary transition-colors">-</button>
            <span class="text-sm font-bold w-4 text-center" id="input-rooms">0</span>
            <button class="w-6 h-6 rounded-full bg-neutral-border/50 text-neutral-muted flex items-center justify-center text-xs hover:bg-brand-primary-soft hover:text-brand-primary transition-colors">+</button>
          </div>
        </div>
        <div class="bg-white p-3 rounded-xl border border-neutral-border flex items-center justify-between">
          <span class="text-sm text-neutral-muted">Baños</span>
          <div class="flex items-center gap-2">
            <button class="w-6 h-6 rounded-full bg-neutral-border/50 text-neutral-muted flex items-center justify-center text-xs">-</button>
            <span class="text-sm font-bold w-4 text-center" id="input-baths">0</span>
            <button class="w-6 h-6 rounded-full bg-neutral-border/50 text-neutral-muted flex items-center justify-center text-xs">+</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Action -->
  <div class="p-5 bg-white border-t border-neutral-border">
    <button 
      id="btn-submit"
      class="btn-pill w-full shadow-lg shadow-brand-primary/20"
    >
      <span>Continuar</span>
      <Icon name="heroicons:arrow-right" class="w-4 h-4" />
    </button>
  </div>
  
  <!-- Success Overlay -->
  <div 
    id="success-overlay"
    class="absolute inset-0 bg-brand-primary z-50 flex flex-col items-center justify-center text-white opacity-0 pointer-events-none transition-opacity duration-500"
  >
    <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mb-6 shadow-xl animate-bounce">
      <Icon name="heroicons:check" class="w-10 h-10 text-brand-primary" />
    </div>
    <h2 class="text-2xl font-bold mb-2">¡Publicado!</h2>
    <p class="text-brand-soft">Tu propiedad está activa</p>
  </div>
</div>

<script>
  // Animation Logic for Upload Screen
  import gsap from 'gsap';
  import { TextPlugin } from 'gsap/TextPlugin';
  
  gsap.registerPlugin(TextPlugin);

  declare global {
    interface Window {
      animateUploadScreen: () => gsap.core.Timeline;
    }
  }

  // Function to run the full animation sequence
  window.animateUploadScreen = () => {
    const tl = gsap.timeline();

    // Reset State
    gsap.set('#upload-preview', { opacity: 0, scale: 1.05 });
    gsap.set('#upload-placeholder', { opacity: 1 });
    gsap.set('#input-title', { value: '' });
    gsap.set('#input-price', { value: '' });
    gsap.set('#input-rooms', { innerText: '0' });
    gsap.set('#input-baths', { innerText: '0' });
    gsap.set('#success-overlay', { opacity: 0 });
    gsap.set('#btn-submit', { scale: 1 });

    // 1. Simulate Image Upload
    tl.to('#upload-area', { 
        borderColor: '#0B8F7A', 
        backgroundColor: '#DDF3EE',
        duration: 0.5,
        delay: 0.5 
    })
    .to('#upload-placeholder', { opacity: 0, duration: 0.3 })
    .to('#upload-preview', { opacity: 1, scale: 1, duration: 0.8, ease: 'power2.out' })

    // 2. Simulate Typing Title
    .to('#input-title', { 
        duration: 1.5, 
        text: { value: "Ático con Terraza en Centro", delimiter: "" }, 
        ease: "none" 
    })

    // 3. Simulate Typing Price
    .to('#input-price', { 
        duration: 0.8, 
        text: { value: "350,000" }, 
        ease: "none" 
    }, "-=0.2")

    // 4. Increment Counters
    .to('#input-rooms', { 
        innerText: 3, 
        snap: { innerText: 1 }, 
        duration: 0.5 
    })
    .to('#input-baths', { 
        innerText: 2, 
        snap: { innerText: 1 }, 
        duration: 0.5 
    }, "-=0.3")

    // 5. Submit Button Press
    .to('#btn-submit', { 
        scale: 0.95, 
        duration: 0.1, 
        delay: 0.5 
    })
    .to('#btn-submit', { 
        scale: 1, 
        duration: 0.2 
    })

    // 6. Success Overlay
    .to('#success-overlay', { 
        opacity: 1, 
        duration: 0.5, 
        delay: 0.2 
    });

    return tl;
  };
</script>
