---
import { Icon } from 'astro-icon/components';
---

<div class="bg-slate-50 h-full flex flex-col relative overflow-hidden font-sans">
  <!-- App Header -->
  <div class="bg-white px-5 py-4 flex items-center gap-3 shadow-sm z-10">
    <button class="text-slate-400">
      <Icon name="heroicons:arrow-left" class="w-6 h-6" />
    </button>
    <h1 class="text-lg font-bold text-slate-800">Nueva Propiedad</h1>
    <div class="ml-auto text-primary-600 font-medium text-sm">Paso 1/3</div>
  </div>

  <!-- Content -->
  <div class="flex-1 overflow-y-auto p-5 space-y-5">
    
    <!-- Image Upload Area -->
    <div class="space-y-2">
      <label class="text-xs font-bold text-slate-500 uppercase tracking-wide">Fotografía Principal</label>
      <div 
        class="aspect-video rounded-2xl border-2 border-dashed border-primary-200 bg-primary-50 flex flex-col items-center justify-center relative overflow-hidden group transition-all duration-500"
        id="upload-area"
      >
        <!-- State 1: Placeholder -->
        <div class="absolute inset-0 flex flex-col items-center justify-center transition-opacity duration-300" id="upload-placeholder">
          <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center mb-2 shadow-sm text-primary-500">
            <Icon name="heroicons:camera" class="w-6 h-6" />
          </div>
          <span class="text-sm text-primary-700 font-medium">Toca para subir foto</span>
        </div>

        <!-- State 2: Image Preview (Initially Hidden) -->
        <div 
          class="absolute inset-0 bg-cover bg-center opacity-0 scale-105 transition-all duration-700"
          id="upload-preview"
          style="background-image: url('https://images.unsplash.com/photo-1600596542815-2a4d04792a95?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80');"
        >
          <div class="absolute inset-0 bg-black/10"></div>
          <div class="absolute bottom-3 right-3 bg-white/90 backdrop-blur px-2 py-1 rounded-lg text-xs font-bold shadow-sm">
            Edit
          </div>
        </div>
      </div>
    </div>

    <!-- Form Fields -->
    <div class="space-y-4">
      <!-- Title Input -->
      <div class="space-y-1.5">
        <label class="text-xs font-bold text-slate-500 uppercase tracking-wide">Título del anuncio</label>
        <div class="relative">
          <input 
            type="text" 
            id="input-title"
            class="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 text-slate-800 text-sm focus:border-primary-500 focus:ring-2 focus:ring-primary-200 outline-none transition-all"
            placeholder="Ej: Ático en..."
            readonly
          />
        </div>
      </div>

      <!-- Price Input -->
      <div class="space-y-1.5">
        <label class="text-xs font-bold text-slate-500 uppercase tracking-wide">Precio (€)</label>
        <div class="relative">
          <input 
            type="text" 
            id="input-price"
            class="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 text-slate-800 text-sm font-semibold focus:border-primary-500 outline-none"
            placeholder="0.00"
            readonly
          />
          <div class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400">
            <Icon name="heroicons:currency-euro" class="w-4 h-4" />
          </div>
        </div>
      </div>

       <!-- Features -->
       <div class="grid grid-cols-2 gap-3">
         <div class="bg-white p-3 rounded-xl border border-slate-200 flex items-center justify-between">
           <span class="text-sm text-slate-600">Habitaciones</span>
           <div class="flex items-center gap-2">
             <button class="w-6 h-6 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center text-xs hover:bg-primary-100 hover:text-primary-600 transition-colors">-</button>
             <span class="text-sm font-bold w-4 text-center" id="input-rooms">0</span>
             <button class="w-6 h-6 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center text-xs hover:bg-primary-100 hover:text-primary-600 transition-colors">+</button>
           </div>
         </div>
         <div class="bg-white p-3 rounded-xl border border-slate-200 flex items-center justify-between">
           <span class="text-sm text-slate-600">Baños</span>
            <div class="flex items-center gap-2">
             <button class="w-6 h-6 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center text-xs">-</button>
             <span class="text-sm font-bold w-4 text-center" id="input-baths">0</span>
             <button class="w-6 h-6 rounded-full bg-slate-100 text-slate-600 flex items-center justify-center text-xs">+</button>
           </div>
         </div>
       </div>
    </div>
  </div>

  <!-- Bottom Action -->
  <div class="p-5 bg-white border-t border-slate-100">
    <button 
      id="btn-submit"
      class="w-full bg-slate-900 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-slate-900/20 flex items-center justify-center gap-2 transform transition-all active:scale-95"
    >
      <span>Publicar Propiedad</span>
      <Icon name="heroicons:arrow-right" class="w-4 h-4" />
    </button>
  </div>
  
  <!-- Success Overlay -->
  <div 
    id="success-overlay"
    class="absolute inset-0 bg-primary-600 z-50 flex flex-col items-center justify-center text-white opacity-0 pointer-events-none transition-opacity duration-500"
  >
    <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mb-6 shadow-xl animate-bounce">
       <Icon name="heroicons:check" class="w-10 h-10 text-primary-600" />
    </div>
    <h2 class="text-2xl font-bold mb-2">¡Publicado!</h2>
    <p class="text-primary-100">Tu propiedad está activa</p>
  </div>
</div>

<script>
  // Animation Logic for Upload Screen
  import gsap from 'gsap';
  import { TextPlugin } from 'gsap/TextPlugin';
  
  gsap.registerPlugin(TextPlugin);

  // Function to run the full animation sequence
  window.animateUploadScreen = () => {
    const tl = gsap.timeline();

    // Reset State
    gsap.set('#upload-preview', { opacity: 0, scale: 1.05 });
    gsap.set('#upload-placeholder', { opacity: 1 });
    gsap.set('#input-title', { value: '' });
    gsap.set('#input-price', { value: '' });
    gsap.set('#input-rooms', { innerText: '0' });
    gsap.set('#input-baths', { innerText: '0' });
    gsap.set('#success-overlay', { opacity: 0 });
    gsap.set('#btn-submit', { scale: 1, backgroundColor: '#0f172a' });

    // 1. Simulate Image Upload
    tl.to('#upload-area', { 
        borderColor: '#3cb4ac', 
        backgroundColor: '#e8faf8',
        duration: 0.5,
        delay: 0.5 
    })
    .to('#upload-placeholder', { opacity: 0, duration: 0.3 })
    .to('#upload-preview', { opacity: 1, scale: 1, duration: 0.8, ease: 'power2.out' })

    // 2. Simulate Typing Title
    .to('#input-title', { 
        duration: 1.5, 
        text: { value: "Apartamento de Lujo en Centro", delimiter: "" }, 
        ease: "none" 
    })

    // 3. Simulate Typing Price
    .to('#input-price', { 
        duration: 0.8, 
        text: { value: "350,000" }, 
        ease: "none" 
    }, "-=0.2")

    // 4. Increment Counters
    .to('#input-rooms', { 
        innerText: 3, 
        snap: { innerText: 1 }, 
        duration: 0.5 
    })
    .to('#input-baths', { 
        innerText: 2, 
        snap: { innerText: 1 }, 
        duration: 0.5 
    }, "-=0.3")

    // 5. Submit Button Press
    .to('#btn-submit', { 
        scale: 0.95, 
        duration: 0.1, 
        delay: 0.5 
    })
    .to('#btn-submit', { 
        scale: 1, 
        backgroundColor: '#10b981', // Green
        duration: 0.2 
    })

    // 6. Success Overlay
    .to('#success-overlay', { 
        opacity: 1, 
        duration: 0.5, 
        delay: 0.2 
    });

    return tl;
  };
</script>