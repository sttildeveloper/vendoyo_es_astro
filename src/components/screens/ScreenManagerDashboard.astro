---
/**
 * ScreenManagerDashboard.astro
 * Dashboard del Manager basado en tenant_dashboard.png
 * - Header con avatar, logo, notificaciÃ³n
 * - Panel de franquicia con greeting
 * - 2 stats cards (Propiedades, Clientes)
 * - BotÃ³n principal "Gestionar propiedades"
 * - 2 quick actions
 * - Lista de propiedades de clientes
 * - Navbar 4 tabs
 */
import { Icon } from 'astro-icon/components';
---

<div class="manager-dash screen-container bg-slate-50 text-neutral-text">
  
  <!-- Header -->
  <div class="bg-white px-3 pt-5 pb-2 flex justify-between items-center">
    <!-- Avatar with online indicator -->
    <div class="relative">
      <div class="w-9 h-9 rounded-full bg-brand-primary overflow-hidden border-2 border-white shadow-sm flex items-center justify-center text-white font-bold text-sm">
        M
      </div>
      <div class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-accent-success rounded-full border-2 border-white"></div>
    </div>

    <!-- Branding -->
    <div class="flex items-center gap-1">
      <span class="font-bold text-sm tracking-tight text-brand-primary">Vendoyo</span>
      <Icon name="circle-flags:ua" class="w-3.5 h-3.5" />
    </div>

    <!-- Notifications -->
    <div class="relative">
      <div class="w-9 h-9 rounded-full bg-orange-50 flex items-center justify-center text-accent-warning">
        <Icon name="heroicons:bell-solid" class="w-4 h-4" />
      </div>
      <div class="absolute top-0 right-0 w-4 h-4 bg-accent-critical rounded-full border-2 border-white flex items-center justify-center">
        <span class="text-[8px] text-white font-bold">1</span>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="flex-1 flex flex-col px-3 py-3 space-y-3 overflow-hidden">
    
    <!-- Greeting Section -->
    <div class="animate-enter opacity-0 translate-y-4">
      <p class="text-[10px] text-neutral-muted">Panel de franquicia</p>
      <h1 class="text-base font-bold text-neutral-text leading-tight">Bienvenido, Manager ðŸ‘‹</h1>
    </div>

    <!-- Stats Cards Row -->
    <div class="grid grid-cols-2 gap-2 animate-enter opacity-0 translate-y-4" style="animation-delay: 80ms;">
      <!-- Propiedades Card -->
      <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm">
        <div class="w-8 h-8 bg-brand-primary-soft rounded-lg flex items-center justify-center mb-2">
          <Icon name="heroicons:building-office-2" class="w-4 h-4 text-brand-primary" />
        </div>
        <p class="text-[9px] text-neutral-muted uppercase tracking-wide">Propiedades</p>
        <div class="flex items-baseline gap-1">
          <span class="text-xl font-bold text-neutral-text">10</span>
          <span class="text-[10px] text-neutral-muted">Activas</span>
        </div>
      </div>
      <!-- Clientes Card -->
      <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm">
        <div class="w-8 h-8 bg-brand-primary-soft rounded-lg flex items-center justify-center mb-2">
          <Icon name="heroicons:user-group" class="w-4 h-4 text-brand-primary" />
        </div>
        <p class="text-[9px] text-neutral-muted uppercase tracking-wide">Clientes</p>
        <div class="flex items-baseline gap-1">
          <span class="text-xl font-bold text-neutral-text">6</span>
          <span class="text-[10px] text-neutral-muted">Total</span>
        </div>
      </div>
    </div>

    <!-- Main CTA Button -->
    <div class="animate-enter opacity-0 translate-y-4" style="animation-delay: 120ms;">
      <button class="w-full bg-brand-primary text-white font-bold py-3 rounded-xl shadow-md flex items-center justify-center gap-2 text-xs">
        <Icon name="heroicons:building-office-2" class="w-4 h-4" />
        Gestionar propiedades
      </button>
    </div>

    <!-- Quick Actions Row -->
    <div class="grid grid-cols-2 gap-2 animate-enter opacity-0 translate-y-4" style="animation-delay: 160ms;">
      <!-- Propiedades -->
      <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm text-center">
        <div class="w-9 h-9 bg-brand-primary-soft rounded-xl flex items-center justify-center mx-auto mb-1.5">
          <Icon name="heroicons:home-modern" class="w-5 h-5 text-brand-primary" />
        </div>
        <p class="text-xs font-bold text-neutral-text">Propiedades</p>
        <p class="text-[9px] text-neutral-muted">Gestiona la cartera</p>
      </div>
      <!-- Clientes -->
      <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm text-center">
        <div class="w-9 h-9 bg-brand-primary-soft rounded-xl flex items-center justify-center mx-auto mb-1.5">
          <Icon name="heroicons:users" class="w-5 h-5 text-brand-primary" />
        </div>
        <p class="text-xs font-bold text-neutral-text">Clientes</p>
        <p class="text-[9px] text-neutral-muted">Propietarios</p>
      </div>
    </div>

    <!-- Properties List Header -->
    <div class="flex justify-between items-center animate-enter opacity-0 translate-y-4" style="animation-delay: 200ms;">
      <h2 class="font-bold text-neutral-text text-xs">Propiedades de clientes</h2>
      <div class="flex items-center gap-1 text-brand-primary text-[10px] font-bold">
        <span>Filtrar</span>
        <Icon name="heroicons:adjustments-horizontal" class="w-3.5 h-3.5" />
      </div>
    </div>

  </div>

  <!-- Bottom Navigation (4 tabs like image) -->
  <div class="bg-white border-t border-neutral-border px-2 py-2 flex justify-around items-center flex-shrink-0">
    <div class="flex flex-col items-center gap-0.5 text-brand-primary">
      <Icon name="heroicons:home-solid" class="w-5 h-5" />
      <span class="text-[9px] font-bold">Inicio</span>
    </div>
    <div class="flex flex-col items-center gap-0.5 text-neutral-muted">
      <Icon name="heroicons:building-office-2" class="w-5 h-5" />
      <span class="text-[9px]">Propiedades</span>
    </div>
    <div class="flex flex-col items-center gap-0.5 text-neutral-muted">
      <Icon name="heroicons:users" class="w-5 h-5" />
      <span class="text-[9px]">Clientes</span>
    </div>
    <div class="flex flex-col items-center gap-0.5 text-neutral-muted">
      <Icon name="heroicons:user-circle" class="w-5 h-5" />
      <span class="text-[9px]">Perfil</span>
    </div>
  </div>
</div>

<script>
  import gsap from 'gsap';

  declare global {
    interface Window {
      animateManagerDashboard: (container?: Document | Element) => gsap.core.Timeline;
    }
  }

  window.animateManagerDashboard = (container = document) => {
    const tl = gsap.timeline();
    
    const elements = container.querySelectorAll('.animate-enter');
    
    gsap.set(elements, { opacity: 0, y: 12 });

    tl.to(elements, {
      y: 0,
      opacity: 1,
      duration: 0.4,
      stagger: 0.06,
      ease: "power2.out"
    });

    return tl;
  }
</script>
