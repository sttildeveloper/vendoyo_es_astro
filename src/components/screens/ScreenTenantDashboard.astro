---
/**
 * ScreenTenantDashboard.astro
 * Dashboard del gestor/Manager de franquicia
 * Basado en tenant_dashboard.png del dise√±o
 */
import { Icon } from 'astro-icon/components';
import MobileNavbar from './MobileNavbar.astro';
import StatsCard from './StatsCard.astro';
---

<div class="screen-container bg-neutral-white text-neutral-text">
  
  <!-- Header -->
  <div class="screen-header flex justify-between items-center">
    <!-- Avatar with online indicator -->
    <div class="relative">
      <div class="w-10 h-10 rounded-full bg-brand-primary-soft overflow-hidden border-2 border-white shadow-sm flex items-center justify-center text-brand-primary font-bold text-sm">
        JG
      </div>
      <div class="absolute bottom-0 right-0 w-3 h-3 bg-accent-success rounded-full border-2 border-white"></div>
    </div>

    <!-- Branding -->
    <div class="flex items-center gap-1.5">
      <span class="font-bold text-base tracking-tight text-brand-primary">VendoYo</span>
      <Icon name="circle-flags:ua" class="w-4 h-4 shadow-sm" />
    </div>

    <!-- Notifications -->
    <div class="relative">
      <div class="w-10 h-10 rounded-full bg-white border border-neutral-border flex items-center justify-center text-neutral-muted shadow-sm">
        <Icon name="heroicons:bell" class="w-5 h-5" />
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="screen-content space-y-4">
    
    <!-- Greeting -->
    <div>
      <h1 class="text-lg font-bold text-neutral-text leading-tight">Bienvenido, Juan üëã</h1>
      <p class="text-neutral-muted text-xs">Gestiona tu cartera de clientes.</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 gap-3">
      <StatsCard 
        icon="heroicons:user-group" 
        value="12" 
        label="Clientes" 
        variant="default"
        showPulse={true}
      />
      <StatsCard 
        icon="heroicons:home-modern" 
        value="8" 
        label="Propiedades" 
        variant="info"
      />
    </div>

    <!-- Main CTA Button -->
    <div class="w-full bg-brand-primary text-white p-4 rounded-2xl shadow-lg shadow-brand-primary/20 flex items-center justify-between cursor-pointer hover:bg-brand-primary-dark transition-colors">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
          <Icon name="heroicons:building-office-2" class="w-6 h-6 text-white" />
        </div>
        <div class="text-left">
          <div class="font-bold text-base">Gestionar Propiedades</div>
          <div class="text-xs text-brand-soft opacity-90">A√±adir o editar</div>
        </div>
      </div>
      <Icon name="heroicons:chevron-right" class="w-5 h-5 opacity-80" />
    </div>

    <!-- Quick Access -->
    <div class="space-y-2">
      <h2 class="font-bold text-neutral-text text-xs uppercase tracking-wide">Accesos R√°pidos</h2>
      <div class="grid grid-cols-2 gap-2">
        <div class="bg-white p-3 rounded-xl border border-neutral-border flex items-center gap-2 shadow-sm hover:border-brand-primary transition-colors cursor-pointer">
          <div class="w-8 h-8 bg-neutral-border/30 rounded-full flex items-center justify-center text-neutral-muted">
            <Icon name="heroicons:user-group" class="w-4 h-4" />
          </div>
          <div>
            <div class="font-bold text-xs text-neutral-text">Clientes</div>
            <div class="text-[9px] text-neutral-muted">Gestionar</div>
          </div>
        </div>
        <div class="bg-white p-3 rounded-xl border border-neutral-border flex items-center gap-2 shadow-sm hover:border-brand-primary transition-colors cursor-pointer">
          <div class="w-8 h-8 bg-neutral-border/30 rounded-full flex items-center justify-center text-neutral-muted">
            <Icon name="heroicons:document-chart-bar" class="w-4 h-4" />
          </div>
          <div>
            <div class="font-bold text-xs text-neutral-text">Informes</div>
            <div class="text-[9px] text-neutral-muted">Ver reportes</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Clients -->
    <div class="space-y-2">
      <div class="flex justify-between items-center">
        <h2 class="font-bold text-neutral-text text-xs uppercase tracking-wide">Clientes Recientes</h2>
        <span class="text-xs text-brand-primary font-bold cursor-pointer">Ver todos</span>
      </div>
      
      <div class="space-y-2">
        <!-- Client 1 -->
        <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-purple-100 text-purple-600 flex items-center justify-center font-bold text-sm">
            MP
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-bold text-sm text-neutral-text truncate">Mar√≠a P√©rez</h3>
            <p class="text-xs text-neutral-muted">2 propiedades activas</p>
          </div>
          <span class="badge badge-success text-[9px] py-0.5 px-2">Activo</span>
        </div>

        <!-- Client 2 -->
        <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center font-bold text-sm">
            CR
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-bold text-sm text-neutral-text truncate">Carlos Rodr√≠guez</h3>
            <p class="text-xs text-neutral-muted">1 propiedad en revisi√≥n</p>
          </div>
          <span class="badge badge-warning text-[9px] py-0.5 px-2">Pendiente</span>
        </div>

        <!-- Client 3 -->
        <div class="bg-white p-3 rounded-xl border border-neutral-border shadow-sm flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center font-bold text-sm">
            LG
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-bold text-sm text-neutral-text truncate">Laura Garc√≠a</h3>
            <p class="text-xs text-neutral-muted">3 propiedades activas</p>
          </div>
          <span class="badge badge-success text-[9px] py-0.5 px-2">Activo</span>
        </div>
      </div>
    </div>

  </div>

  <!-- Bottom Navigation -->
  <MobileNavbar activeTab="home" variant="manager" />
</div>
