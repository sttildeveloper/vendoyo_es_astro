---
/**
 * ScreenPropertyDetail.astro
 * Detalle de propiedad con galería, metadatos y atributos
 * Basado en detalle_propiedad.png del diseño
 */
import { Icon } from 'astro-icon/components';
---

<div class="screen-container bg-white text-neutral-text">
  
  <!-- Hero Image -->
  <div class="relative h-48 flex-shrink-0">
    <div 
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('https://images.unsplash.com/photo-1600596542815-2a4d04792a95?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80');"
    >
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
    </div>
    
    <!-- Top Bar -->
    <div class="absolute top-0 left-0 right-0 flex justify-between items-center p-4 pt-8">
      <button class="w-10 h-10 bg-white/90 backdrop-blur rounded-full flex items-center justify-center text-neutral-text shadow-sm">
        <Icon name="heroicons:arrow-left" class="w-5 h-5" />
      </button>
      <div class="flex gap-2">
        <button class="w-10 h-10 bg-white/90 backdrop-blur rounded-full flex items-center justify-center text-neutral-muted shadow-sm">
          <Icon name="heroicons:share" class="w-5 h-5" />
        </button>
        <button class="w-10 h-10 bg-white/90 backdrop-blur rounded-full flex items-center justify-center text-danger shadow-sm">
          <Icon name="heroicons:heart" class="w-5 h-5" />
        </button>
      </div>
    </div>

    <!-- Image Counter -->
    <div class="absolute bottom-4 right-4 bg-black/60 text-white text-xs font-bold px-2 py-1 rounded-lg flex items-center gap-1">
      <Icon name="heroicons:camera" class="w-3 h-3" />
      1/8
    </div>
  </div>

  <!-- Content -->
  <div class="screen-content space-y-5 -mt-4 relative z-10 bg-white rounded-t-3xl pt-5">
    
    <!-- Title & Price -->
    <div class="flex justify-between items-start gap-3">
      <div class="flex-1">
        <h1 class="text-xl font-bold text-neutral-text">Ático con Terraza en Centro</h1>
        <div class="flex items-center gap-1 text-neutral-muted text-sm mt-1">
          <Icon name="heroicons:map-pin" class="w-4 h-4" />
          <span>C/ Mayor 12, Madrid</span>
        </div>
      </div>
      <div class="text-right">
        <div class="text-xl font-bold text-brand-primary">€350,000</div>
        <div class="text-xs text-neutral-muted">Venta</div>
      </div>
    </div>

    <!-- Status Badges -->
    <div class="flex gap-2 flex-wrap">
      <span class="badge badge-success text-xs flex items-center gap-1">
        <Icon name="heroicons:check-circle" class="w-3 h-3" />
        Terminado
      </span>
      <span class="badge text-xs bg-slate-100 text-slate-600">
        REF: VY-2024-001
      </span>
      <span class="badge text-xs bg-blue-50 text-blue-600">
        Publicado hace 3 días
      </span>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-4 gap-2">
      <div class="bg-slate-50 p-3 rounded-xl text-center">
        <div class="text-lg font-bold text-neutral-text">3</div>
        <div class="text-[10px] text-neutral-muted">Habitaciones</div>
      </div>
      <div class="bg-slate-50 p-3 rounded-xl text-center">
        <div class="text-lg font-bold text-neutral-text">2</div>
        <div class="text-[10px] text-neutral-muted">Baños</div>
      </div>
      <div class="bg-slate-50 p-3 rounded-xl text-center">
        <div class="text-lg font-bold text-neutral-text">120</div>
        <div class="text-[10px] text-neutral-muted">m²</div>
      </div>
      <div class="bg-slate-50 p-3 rounded-xl text-center">
        <div class="text-lg font-bold text-neutral-text">4º</div>
        <div class="text-[10px] text-neutral-muted">Planta</div>
      </div>
    </div>

    <!-- Description -->
    <div class="space-y-2">
      <h2 class="font-bold text-sm text-neutral-text uppercase tracking-wide">Descripción</h2>
      <p class="text-sm text-neutral-muted leading-relaxed">
        Espectacular ático reformado en el centro de Madrid. Muy luminoso y con vistas despejadas a la ciudad. 
        Terraza privada de 30m². Acabados de alta calidad. Parking incluido.
      </p>
    </div>

    <!-- Features -->
    <div class="space-y-3">
      <h2 class="font-bold text-sm text-neutral-text uppercase tracking-wide">Características</h2>
      <div class="grid grid-cols-2 gap-2">
        <div class="flex items-center gap-2 text-sm text-neutral-muted">
          <Icon name="heroicons:check" class="w-4 h-4 text-accent-success" />
          <span>Terraza</span>
        </div>
        <div class="flex items-center gap-2 text-sm text-neutral-muted">
          <Icon name="heroicons:check" class="w-4 h-4 text-accent-success" />
          <span>Parking</span>
        </div>
        <div class="flex items-center gap-2 text-sm text-neutral-muted">
          <Icon name="heroicons:check" class="w-4 h-4 text-accent-success" />
          <span>Ascensor</span>
        </div>
        <div class="flex items-center gap-2 text-sm text-neutral-muted">
          <Icon name="heroicons:check" class="w-4 h-4 text-accent-success" />
          <span>Aire acondicionado</span>
        </div>
        <div class="flex items-center gap-2 text-sm text-neutral-muted">
          <Icon name="heroicons:check" class="w-4 h-4 text-accent-success" />
          <span>Calefacción central</span>
        </div>
        <div class="flex items-center gap-2 text-sm text-neutral-muted">
          <Icon name="heroicons:check" class="w-4 h-4 text-accent-success" />
          <span>Trastero</span>
        </div>
      </div>
    </div>

    <!-- Agent Info -->
    <div class="bg-slate-50 p-4 rounded-xl flex items-center gap-3">
      <div class="w-12 h-12 rounded-full bg-brand-primary flex items-center justify-center text-white font-bold text-lg">
        JP
      </div>
      <div class="flex-1">
        <div class="font-bold text-sm text-neutral-text">Juan Pérez</div>
        <div class="text-xs text-neutral-muted">Agente Comercial • Valencia Norte</div>
      </div>
      <button class="w-10 h-10 bg-brand-primary rounded-full flex items-center justify-center text-white shadow-sm">
        <Icon name="heroicons:phone" class="w-5 h-5" />
      </button>
    </div>

  </div>

  <!-- Bottom Actions -->
  <div class="p-4 bg-white border-t border-neutral-border flex gap-3 flex-shrink-0">
    <button class="flex-1 btn-pill bg-neutral-text">
      <Icon name="heroicons:chat-bubble-left-ellipsis" class="w-4 h-4" />
      Mensaje
    </button>
    <button class="flex-1 btn-pill">
      <Icon name="heroicons:phone" class="w-4 h-4" />
      Llamar
    </button>
  </div>
</div>
