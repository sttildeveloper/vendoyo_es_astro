---
import { Icon } from 'astro-icon/components';
---

<div class="bg-brand-primary-soft/30 h-full flex flex-col font-sans relative overflow-hidden select-none pointer-events-none">
  
  <!-- Email App Header -->
  <div class="bg-white pt-6 pb-3 px-4 shadow-sm z-10 flex justify-between items-center border-b border-neutral-border">
      <h1 class="text-lg font-bold text-neutral-text">Bandeja de entrada</h1>
      <div class="w-8 h-8 bg-brand-primary-soft rounded-full flex items-center justify-center">
        <Icon name="heroicons:magnifying-glass" class="w-4 h-4 text-brand-primary" />
      </div>
  </div>

  <!-- Email List -->
  <div class="flex-1 p-4 space-y-3">
      
      <!-- Old Email -->
      <div class="bg-white p-4 rounded-xl shadow-sm border border-neutral-border opacity-60">
          <div class="flex justify-between mb-1">
              <span class="font-bold text-xs text-neutral-muted">Equipo Soporte</span>
              <span class="text-[10px] text-neutral-muted">Ayer</span>
          </div>
          <div class="text-xs font-medium text-neutral-text">Bienvenido a la newsletter</div>
          <div class="text-xs text-neutral-muted truncate mt-1">Descubre las últimas novedades del sec...</div>
      </div>

      <!-- The Verification Email -->
      <div id="email-item" class="bg-white p-4 rounded-xl shadow-md border-l-4 border-l-brand-primary relative overflow-hidden opacity-0 translate-y-4">
          <div class="flex justify-between mb-1">
              <span class="font-bold text-xs text-neutral-text">VendoYo App</span>
              <span class="text-[10px] text-brand-primary font-bold">Ahora</span>
          </div>
          <div class="text-sm font-bold text-neutral-text">Verifica tu cuenta</div>
          <div class="text-xs text-neutral-muted mt-1">Hola Carlos, confirma tu correo para...</div>
          
          <!-- Ripple effect container -->
          <div id="email-ripple" class="absolute inset-0 bg-brand-primary-soft opacity-0"></div>
      </div>

  </div>

  <!-- Email Detail View (Overlay) -->
  <div id="email-detail" class="absolute inset-0 bg-white z-20 translate-x-full transition-transform duration-500 flex flex-col">
      <div class="pt-12 px-6 pb-4 border-b border-neutral-border flex items-center gap-4">
          <Icon name="heroicons:arrow-left" class="w-5 h-5 text-neutral-muted" />
          <h2 class="font-bold text-neutral-text">Detalle</h2>
      </div>
      <div class="p-8 flex-1 flex flex-col items-center text-center pt-20">
          <div class="w-16 h-16 bg-brand-primary-soft rounded-full flex items-center justify-center mb-6 text-brand-primary">
              <Icon name="heroicons:envelope-open" class="w-8 h-8" />
          </div>
          <h3 class="text-xl font-bold text-neutral-text mb-2">Confirma tu email</h3>
          <p class="text-sm text-neutral-muted mb-8 leading-relaxed">
              Gracias por registrarte en VendoYo. Pulsa el botón para activar tu cuenta de Agente.
          </p>
          
          <button id="btn-verify-email" class="w-full bg-brand-primary text-white font-bold py-4 rounded-xl shadow-lg shadow-brand-primary/20 active:scale-95 transition-transform hover:bg-brand-primary-dark">
              Verificar Cuenta
          </button>
      </div>
  </div>

  <!-- Success Toast -->
  <div id="email-success" class="absolute bottom-10 left-1/2 -translate-x-1/2 bg-neutral-text text-white px-6 py-3 rounded-full shadow-xl flex items-center gap-3 opacity-0 translate-y-10 z-30 w-max border border-neutral-border/10">
      <Icon name="heroicons:check-circle" class="w-5 h-5 text-brand-primary" />
      <span class="text-sm font-bold">¡Email verificado!</span>
  </div>
</div>