---
import { Icon } from 'astro-icon/components';

const landingUrl = import.meta.env.PUBLIC_LANDING_VENDOYO_APP_URL || '/';
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 border-b border-neutral-border bg-white/95 backdrop-blur-md shadow-sm"
>
  <nav class="section !py-0">
    <div class="flex items-center justify-between py-3 md:py-4 gap-4">
      <!-- Logo -->
      <a href={landingUrl} class="flex items-center gap-2 group">
        <span class="text-2xl font-bold tracking-tight flex items-center gap-2 text-brand-primary">
          <div class="w-8 h-8 rounded-lg bg-brand-primary text-white flex items-center justify-center shadow-sm">
            <Icon name="heroicons:home-modern" class="w-5 h-5" />
          </div>
          VendoYo
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        <a href="#features" class="nav-link text-neutral-text hover:text-brand-primary">Características</a>
        <a href="#pricing" class="nav-link text-neutral-text hover:text-brand-primary">Precios</a>
        <a href="#testimonials" class="nav-link text-neutral-text hover:text-brand-primary">Testimonios</a>
      </div>

      <!-- Desktop CTAs -->
      <div class="hidden md:flex items-center gap-3">
        <a
          href={landingUrl}
          class="px-6 py-2.5 rounded-xl font-bold transition-all duration-300 text-sm bg-brand-primary text-white hover:bg-brand-primary-dark shadow-lg shadow-brand-primary/20"
        >
          Descargar App
        </a>
      </div>

      <!-- Mobile Menu -->
      <details class="md:hidden relative">
        <summary
          class="list-none p-2 rounded-lg focus:outline-none text-neutral-text cursor-pointer"
          aria-label="Toggle menu"
        >
          <span class="sr-only">Toggle menu</span>
          <Icon name="heroicons:bars-3" class="w-7 h-7 icon-open" />
          <Icon name="heroicons:x-mark" class="w-7 h-7 icon-close" />
        </summary>

        <div class="mt-4 pt-4 border-t border-neutral-border space-y-2 bg-white rounded-2xl p-4 shadow-xl text-neutral-text">
          <a href="#features" class="block p-3 font-bold hover:bg-brand-soft rounded-xl transition-colors">
            Características
          </a>
          <a href="#pricing" class="block p-3 font-bold hover:bg-brand-soft rounded-xl transition-colors">
            Precios
          </a>
          <a href="#testimonials" class="block p-3 font-bold hover:bg-brand-soft rounded-xl transition-colors">
            Testimonios
          </a>

          <div class="pt-4 mt-2 border-t border-neutral-border space-y-3">
            <a
              href={landingUrl}
              class="w-full bg-brand-primary text-white font-bold py-3.5 rounded-xl flex items-center justify-center shadow-lg"
            >
              Descargar App
            </a>
          </div>
        </div>
      </details>
    </div>
  </nav>
</header>

<style>
  details > summary {
    list-style: none;
  }
  details > summary::-webkit-details-marker {
    display: none;
  }
  .icon-close {
    display: none;
  }
  details[open] .icon-open {
    display: none;
  }
  details[open] .icon-close {
    display: inline-block;
  }
  .nav-link {
    font-size: 0.95rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }
</style>
