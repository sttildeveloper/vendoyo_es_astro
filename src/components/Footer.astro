---
/**
 * Footer.astro
 * Footer moderno con 4 columnas, redes sociales y copyright
 */
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();
const landingUrl = import.meta.env.PUBLIC_LANDING_VENDOYO_APP_URL || '/';
const devAuthor = import.meta.env.PUBLIC_DEV || '';
---

<footer class="bg-slate-950 text-slate-400 py-16 border-t border-slate-800">
  <div class="max-w-6xl mx-auto px-6">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 mb-16">
      
      <!-- Brand Column (4 cols) -->
      <div class="lg:col-span-4 space-y-6">
        <a href={landingUrl} class="flex items-center gap-2 group">
          <div class="w-10 h-10 bg-brand-primary rounded-xl flex items-center justify-center text-white shadow-lg shadow-brand-primary/20 group-hover:scale-105 transition-transform">
            <Icon name="heroicons:home-modern" class="w-6 h-6" />
          </div>
          <span class="text-xl font-bold text-white tracking-tight">VendoYo</span>
        </a>
        <p class="text-sm leading-relaxed max-w-sm">
          La plataforma integral para gestionar tu red inmobiliaria desde cualquier lugar. 
          Potencia tus ventas y optimiza tus operaciones con nuestra app móvil.
        </p>
        
        <!-- Socials -->
        <div class="flex gap-4">
          <a href={landingUrl} class="w-10 h-10 rounded-full bg-slate-900 border border-slate-800 flex items-center justify-center hover:bg-white hover:text-slate-900 hover:border-white transition-all duration-300" aria-label="LinkedIn">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/></svg>
          </a>
          <a href={landingUrl} class="w-10 h-10 rounded-full bg-slate-900 border border-slate-800 flex items-center justify-center hover:bg-white hover:text-slate-900 hover:border-white transition-all duration-300" aria-label="Twitter">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/></svg>
          </a>
          <a href={landingUrl} class="w-10 h-10 rounded-full bg-slate-900 border border-slate-800 flex items-center justify-center hover:bg-white hover:text-slate-900 hover:border-white transition-all duration-300" aria-label="Instagram">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8 1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5 5 5 0 0 1-5 5 5 5 0 0 1-5-5 5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3z"/></svg>
          </a>
        </div>
      </div>

      <!-- Links Column 1 (2 cols) -->
      <div class="lg:col-span-2 lg:col-start-6">
        <h4 class="text-white font-bold mb-6">Producto</h4>
        <ul class="space-y-4 text-sm">
          <li><a href="#features" class="hover:text-brand-primary transition-colors">Características</a></li>
          <li><a href="#app-showcase" class="hover:text-brand-primary transition-colors">App Móvil</a></li>
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Integraciones</a></li>
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Actualizaciones</a></li>
        </ul>
      </div>

      <!-- Links Column 2 (2 cols) -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6">Compañía</h4>
        <ul class="space-y-4 text-sm">
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Sobre Nosotros</a></li>
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Carreras</a></li>
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Blog</a></li>
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Contacto</a></li>
        </ul>
      </div>

      <!-- Links Column 3 (2 cols) -->
      <div class="lg:col-span-2">
        <h4 class="text-white font-bold mb-6">Legal</h4>
        <ul class="space-y-4 text-sm">
          <li><a href="/privacy" class="hover:text-brand-primary transition-colors">Privacidad</a></li>
          <li><a href="/terms" class="hover:text-brand-primary transition-colors">Términos</a></li>
          <li><a href="/cookies" class="hover:text-brand-primary transition-colors">Cookies</a></li>
          <li><a href={landingUrl} class="hover:text-brand-primary transition-colors">Seguridad</a></li>
        </ul>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4 text-xs">
      <p>&copy; {currentYear} VendoYo S.L. Todos los derechos reservados.{devAuthor && ` Autor: ${devAuthor}`}</p>
      
      <div class="flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
        <span class="text-emerald-500 font-medium">Sistema activo</span>
      </div>
    </div>
  </div>
</footer>
